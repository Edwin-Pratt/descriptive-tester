{
    "compilerOptions": {
        "strict": true,
        "target": "ES6",
        "outDir": "dist",
        "rootDir": "src",
        "sourceMap": true,
        "declaration": true,
        "alwaysStrict": true,
        "module": "CommonJS",
        "noImplicitAny": true,
        "removeComments": true,
        "declarationMap": true,
        "noImplicitThis": true,
        "noImplicitReturns": true
    },
    "exclude": ["./node_modules", "./bin", "./dist"]
}
